<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:textSize="10dp"
        android:id="@+id/ToTextView"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailEditText"
        android:layout_row="0"
        android:layout_column="1"
        android:hint="Receiver's Email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cc/ Bcc:"
        android:textSize="10dp"
        android:id="@+id/ccbccTextView"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/ccEmailEditText"
        android:layout_row="1"
        android:layout_column="1"
        android:hint="Cc/ Bcc recipients" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject:"
        android:textSize="10dp"
        android:id="@+id/SubejectTextView"
        android:layout_row="2"
        android:layout_column="0" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailSubject"
        android:ems="10"
        android:id="@+id/EmailSubjectEditText"
        android:layout_row="2"
        android:layout_column="1"
        android:hint="Email Subject" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Your message here"
        android:id="@+id/MessageEditText"
        android:layout_row="3"
        android:layout_column="1"
        android:textAlignment="gravity"
        android:gravity="fill_vertical"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="SEND"
        android:id="@+id/SendButton"
        android:layout_row="4"
        android:layout_column="1"
        android:gravity="center|center_horizontal"
        android:layout_gravity="center" />
</GridLayout>